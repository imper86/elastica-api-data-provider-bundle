<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Imper86\ElasticaApiDataProviderBundle\EventListener\QuerySearchResolveListener" public="false" autowire="false" autoconfigure="false">
            <argument key="$config" />
            <tag name="kernel.event_listener" event="Imper86\ElasticaApiDataProviderBundle\Event\QueryEvent" method="onQuery" priority="512" />
        </service>

        <service id="Imper86\ElasticaApiDataProviderBundle\Filter\QueryStringFilter" public="false" autowire="false" autoconfigure="false">
            <argument key="$config" />
            <tag name="api_platform.filter" />
        </service>
    </services>
</container>
